{% extends "base.html.twig" %}

{% block title %}Sign In{% endblock %}

{% block navigation %}
    <!-- Navigation -->
 
      <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item active">
            <a class="nav-link" href="/login">Log in
              <span class="sr-only">(current)</span>
            </a>
          </li>
          
        </ul>
      </div>
    </div>
    
  </nav>
{% endblock %}

{% block body %}

      {{ form_start(form) }}
      {{ form_widget(form) }} 
      <button type="submit" class="form-control btn btn-primary">Sign in</button>
      {{ form_end(form) }}


    <div class="row mt-5">
            <div class="col-md-6 offset-md-3">
               <form>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input class="form-control" type="email" id="email" placeholder="Email">
                    </div>
                     <div class="form-group">
                        <label for="password">Password</label>
                        <input class="form-control" type="password" id="password" placeholder="Password">
                    </div>
                    <div class="form-group">
                        <label for="password">Password confirmation</label>
                        <input class="form-control" type="password" id="password" placeholder="Password confirmation">
                    </div>
                    <div class="form-group">
                       <img src="http://placehold.it/120x120" />
                        <input class="ml-3" type="file" name="image">
                    </div>
                    <div class="form-group">
                        <button class="form-control btn btn-primary">Sign in</button>
                    </div>
                </form>
            </div>
        </div>
{% endblock %}