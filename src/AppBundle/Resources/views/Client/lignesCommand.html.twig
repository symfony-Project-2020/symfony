{% extends "base.html.twig" %}

{% block title %}My commands{% endblock %}

{% block body %}
    <div class="mt-5">
        <h2>{{command.reference}}</h2>
    </div>
    
     <table class="table table-hover mt-5">
        <thead>
            <tr>
            <th scope="col">ID PRODUCT</th>
            <th scope="col">PRODUCT TITLE</th>
            <th scope="col">PU</th>
            <th scope="col">Quantity</th>
            <th scope="col">PT</th>
            </tr>
        </thead>
        <tbody>
    {% for ligne in lignesCommand %}
            <tr class="table">
                <th scope="row">{{ligne.produit.id}}</th>
                <th scope="row">{{ligne.produit.title}}</th>
                <td>&euro;  {{ ligne.produit.price | number_format(2)  }}</td>
                <td>{{ ligne.quantity }}</td>
                <td>&euro;  {{ ligne.produit.price * ligne.quantity }}</td>
            </tr>
    {% endfor %}   
        </tbody>
    </table>
{% endblock %}
